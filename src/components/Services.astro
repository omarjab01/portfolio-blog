---
import ServiceCard from "./ServiceCard.astro";

---

<div class="container mx-auto p-6 max-w-7xl">
    <p class="text-center mb-4 mt-8 md:mt-4 md:mb-8 font-semibold">Servizi che offro</p>
    <div class="grid grid-cols-1 gap-4 p-6 md:p-0 md:grid-cols-2 lg:grid-cols-4 w-full">
        <ServiceCard 
            bg_card_class="blue"
            bg_icona="#EBFBFF"
            classe_icona="wp_bg"
            icona_svg="wp_logo"
            titolo="Wordpress"
            descrizione="Creazione di un tema personalizzato per il tuo sito wordpress"
        />
        <ServiceCard 
            bg_card_class="green"
            bg_icona="#EBFFF3"
            classe_icona="seo_bg p-3"
            icona_svg="seo"
            titolo="SEO"
            descrizione="Ottimizzazione SEO del sito a tal punto da migliorarne il ranking su google"
        />
        <ServiceCard 
            bg_card_class="purple"
            bg_icona="#EEEBFF"
            classe_icona="webdesign_bg p-2"
            icona_svg="design"
            titolo="Web Design"
            descrizione="Progettazione di un sito nuovo o giÃ  esistente"
        />
        <ServiceCard 
            bg_card_class="light-blue"
            bg_icona="#EEEBFF"
            classe_icona="webdesign_bg p-2"
            icona_svg="react"
            titolo="Web Development"
            descrizione="Creazione siti o web app diversi da wordpress"
        />
    </div>
</div>

