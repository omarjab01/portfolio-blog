---
import BlogPostHeader from '../components/BlogPostHeader.astro';
import '../styles/global.css';
import MainLayout from "./MainLayout.astro";
const {frontmatter: {title, description, date, category, author, image}} = Astro.props;

---

<MainLayout title={title} >
    <div class="container mx-auto p-6 max-w-2xl" tw-exclude>
        <BlogPostHeader 
            title = {title}
            category = {category}
            image = {image}
            date = {date}
            description = {description}
            author = {author}
        />
        <div class="post-content all-initial" id="blog-post-content" tw-ignore>
            <div class="content">
                <slot tw-exlude/>
            </div>
        </div>
    </div>
</MainLayout>


